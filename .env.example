# CASHMACHINE/ULTRATHINK Configuration
# Copy this file to .env and update with your actual values

# ============== API KEYS ==============
# Market Data APIs
ALPHAVANTAGE_API_KEY=YOUR_ALPHAVANTAGE_KEY_HERE
POLYGON_API_KEY=YOUR_POLYGON_KEY_HERE
FINNHUB_API_KEY=YOUR_FINNHUB_KEY_HERE
COINGECKO_API_KEY=YOUR_COINGECKO_KEY_HERE
YAHOO_FINANCE_ENABLED=true
TWELVEDATA_API_KEY=YOUR_TWELVEDATA_KEY_HERE

# Trading APIs
OANDA_API_TOKEN=YOUR_OANDA_TOKEN
OANDA_ACCOUNT_ID=YOUR_OANDA_ACCOUNT
ALPACA_API_KEY=YOUR_ALPACA_KEY
ALPACA_API_SECRET=YOUR_ALPACA_SECRET
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2

# ============== NETWORK CONFIGURATION ==============
# Redis Configuration
REDIS_HOST=10.100.2.200
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# EC2 Instance IPs
TRINITY_HOST=10.100.2.125
DATA_COLLECTOR_HOST=10.100.2.251
ML_FARM_HOST=10.100.2.134
BRIDGE_HOST=10.100.1.23
PROXY_HOST=10.100.1.72
SUPERSET_HOST=10.100.2.77

# ============== PATHS ==============
# Directories
LOG_DIR=/var/log
CONFIG_DIR=/opt/cashmachine/config
TRINITY_DIR=/opt/cashmachine/trinity
DATA_DIR=/opt/cashmachine/data
MODEL_DIR=/opt/cashmachine/models

# Log Files
ULTRATHINK_LOG=/var/log/ultrathink.log
TRINITY_LOG=/var/log/trinity_integrated.log
CIRCUIT_BREAKER_LOG=/var/log/circuit_breaker.log

# ============== TRADING CONFIGURATION ==============
# Risk Management
MAX_POSITION_SIZE=1000
MAX_DAILY_TRADES=100
MAX_LOSS_PERCENT=2.0
MIN_CONFIDENCE_THRESHOLD=0.6

# Balance Enforcement
TARGET_BUY_RATIO=0.3333
TARGET_SELL_RATIO=0.3333
TARGET_HOLD_RATIO=0.3334
BALANCE_CHECK_INTERVAL=10

# Learning Parameters
LEARNING_RATE=0.01
EXPLORATION_RATE=0.3
MIN_EXPLORATION_RATE=0.05
MODEL_SAVE_INTERVAL=10

# ============== FEATURE FLAGS ==============
ENABLE_LEARNING=true
ENABLE_PAPER_TRADING=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_BALANCE_ENFORCEMENT=true
DEBUG_MODE=false

# ============== MONITORING ==============
# Alerts
ALERT_EMAIL=your-email@example.com
ALERT_WEBHOOK_URL=
ENABLE_ALERTS=false

# Metrics
METRICS_PORT=9090
ENABLE_METRICS=true